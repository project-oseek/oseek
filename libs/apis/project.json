{
  "name": "apis",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/apis/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/apis",
        "main": "libs/apis/src/index.ts",
        "tsConfig": "libs/apis/tsconfig.lib.json",
        "assets": ["libs/apis/*.md"],
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/apis/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/apis/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "generate-mustache": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sh ./generate-mustache.sh",
        "cwd": "./libs/apis"
      }
    },
    "generate-api:petstore": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sh ./generate-api.sh petstore v2",
        "cwd": "./libs/apis"
      }
    }
  },
  "tags": []
}
